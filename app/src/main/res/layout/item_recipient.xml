<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewRecipient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="2dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/linearLayoutRecipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Recipient Name -->
        <TextView
            android:id="@+id/textViewRecipientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jane Smith"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Recipient Email -->
        <TextView
            android:id="@+id/textViewRecipientEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jane.smith@example.com"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/linearLayoutRecipientActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/buttonEditRecipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonDeleteRecipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>